type Query {
  kunde(id: ID!): Kunde
  kunden(input: Suchkriterien): [Kunde!]
}

type Mutation {
  create(input: KundeInput!): CreatePayload
}

# https://spec.graphql.org/draft/#sec-Types
"Eigenschaften eines Kunde-Datensatzes mit untergeordneten Eigenschaften"
type Kunde {
  id: ID
  nachname: String!
  email: String!
  kategorie: Int!
  newsletter: Boolean!
  geburtsdatum: String
  homepage: String
  geschlecht: String
  familienstand: String
  interessen: [String!]
  umsatz: Umsatz
  adresse: Adresse!
}

type Umsatz {
  betrag: String!
  waehrung: String!
}

type Adresse {
  plz: String!
  ort: String!
}

# https://spec.graphql.org/draft/#sec-Input-Objects
input Suchkriterien {
  nachname: String
  email: String
}

input KundeInput {
  nachname: String!
  email: String!
  kategorie: Int!
  newsletter: Boolean!
  geburtsdatum: String
  homepage: String
  # damit toSting() vom Enum-Wert aufgerufen wird
  geschlecht: Geschlecht
  familienstand: Familienstand
  interessen: [Interesse!]
  umsatz: UmsatzInput
  adresse: AdresseInput!
}

enum Geschlecht {
  W
  "maennlich"
  M
  "divers"
  D
}

enum Familienstand {
  "ledig"
  L
  "verheiratet"
  V
  "geschieden"
  G
  "verwitwet"
  VW
}

enum Interesse {
  "Sport"
  S
  "Lesen"
  L
  "Reisen"
  R
}

input UmsatzInput {
  betrag: String!
  waehrung: String!
}

input AdresseInput {
  plz: String!
  ort: String!
}

type CreatePayload {
  id: String!
}
